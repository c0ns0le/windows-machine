# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
insert_final_newline = true

[{.gitattributes,.editorconfig,.gitignore}]
end_of_line = lf

[{LICENSE}]
end_of_line = lf
charset = utf-8

[*.{md}]
end_of_line = lf
insert_final_newline = true
indent_size = 4
trim_trailing_whitespace = false
charset = utf-8

[*.{cs}]
end_of_line = crlf
indent_size = 4
trim_trailing_whitespace = true

[*.{json}]
end_of_line = lf
indent_size = 2
trim_trailing_whitespace = true

[*.{ps1,psm1,psd1}]
end_of_line = crlf
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
end_of_line = lf
indent_size = 2

[*.{ps1xml,props,xml}]
end_of_line = crlf
indent_size = 2
